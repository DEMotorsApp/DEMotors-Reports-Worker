<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/metro/4.1.5/css/metro.min.css">
        <style>
            {{asset "styles.css" "utf8"}}
        </style>
    </head>
    <body>
        <div class="listado-box">
                <table class="table-header" cellpadding="0" cellspacing="0">
                    <tr class="top">
                        <td colspan="2">
                            <table>
                                <tr>
                                    <td class="title">
                                        <img src="{{asset "demotors_logo_2.jpeg" "dataURI"}}" style="width:100%; max-width:300px;" />
                                    </td>
                                    <td>
                                        nombre: {{nombreEmpresa}}
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <main class="main">
                    <table class="table striped">
                        <thead>
                            <tr>
                                <th>Numero Orden Servicio</th>
                                <th>Cliente</th>
                                <th>Direccion</th>
                                <th>Numero de serie</th>
                                <th>Fecha</th>
                                <th>Trabajo Realizado</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each dataOrdenesServicios}}
                                <tr>
                                    <td>{{NUM_ORDER}}</td>
                                    <td>{{CLIENT}}</td>
                                    <td>{{DIRECTION}}</td>
                                    <td>{{NUM_SERIE}}</td>
                                    <td class="body-table">{{DATE}}</td>
                                    <td>{{WORK_DONE}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </main>
            </div>
    </body>
</html>